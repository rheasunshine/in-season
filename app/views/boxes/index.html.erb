<section class="boxes-index">

  <header class="page-header">
    <h1><%= link_to @farm.name, farm_path(@farm.id) %> &raquo; CSA Box Subscription Options</h1>
  </header>

  <div class="boxes">
    <% @boxes.map do |box| %>
    <%= render 'box', box: box, id: box.id, farm: @farm, description: box.description, price: box.price %>
    <% end %>
  </div>

</section>
