<%= render 'farm_nav' %>

<section class="boxes-index">

  <header class="page-header">
    <h3><%= link_to @farm.name, farm_path(@farm.id) %> &raquo; CSA Box Subscription Options</h3>
  </header>

  <div class="boxes">
    <% @boxes.map do |box| %>
    <%= render 'box', box: box, id: box.id, farm: @farm, description: box.description, pickup_price: into_dollars(box.pickup_price_cents), delivery_price: into_dollars(box.delivery_price_cents) %>
    <% end %>
  </div>

</section>
