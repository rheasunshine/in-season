<%= render 'farm_nav' %>

<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if cart.size == 0 %>

  <div class="order-summary">
   Your cart is empty.
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn green' %>

  <% else %>

    <table class="bordered">
      <thead>
        <tr>
          <th data-field="id">Box</th>
          <th data-field="unit_price">Unit Price</th>
          <th data-field="quantity">Quantity</th>
          <th data-field="price">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_total = 0 %>
        <% cart.each do |box_id, details| %>
          <%= render 'item', box_id: box_id, details: details %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= number_to_currency(@cart_total) %>
          </th>
        </tr>
      </tfoot>
    </table>

</section>





















  <div class="row">
    <div class="col-xs-12">
      <%= form_tag farm_orders_path do %>
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= @cart_total * 100 %>"
          data-name="In Season"
          data-description="Your CSA Order"
          data-locale="auto"
          data-email="<%= current_user.email %>"
          data-currency="cad">
        </script>
      <% end %>
    </div>
  </div>

<% end %>

</section>
