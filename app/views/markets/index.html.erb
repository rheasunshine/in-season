<div class="container">
  <div class="row">

    <div class="card hoverhovercard">
      <div class="label col-xs-4 col-xs-offset-1">
        Yo Yo Yo Check Out All of Our Farmers!!!
      </div>
    </div>
  </div>

  <div class='row'>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h1>All our FARMZ!</h1></div>

        <table class="table">
          <thead>
            <tr>
              <th><h4>Farm</h4></th>
              <th><h4>Farmers</h4></th>
              <th><h4>Bio</h4></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @farms.map do |farm| %>
              <td>
                <h5><a href="/farms/<%= farm.id %>"><%= farm.name %></a></h5>
              </td>
              <td>
                <h5><%= farm.farmer %></h5>
              </td>
              <td>
                <h5><%= farm.about_farm %></h5>
              </td>
            </tr>
          </tbody>
              <% end %>
        </table>
      </div>
    </div>
  </div>
</div>


