<div class="container">
  <div class="row">

    <div class="card hoverhovercard">
      <div class="label col-xs-4 col-xs-offset-1">
        Yo Yo Yo Check Out All of Our Markets!!!
      </div>
    </div>
  </div>

  <div class='row'>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">All the markets our farmers will be at!</div>

        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th> Name </th>
              <th> Address </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @markets.map do |market| %>
              <td> <%= market.id %> </td>
              <td>
                <a href="/"> <%= market.name %> </a>
              </td>
              <td>
                <%= market.address %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


