<div class="row">
  <div class="tractor">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="jumbotron">

          <h2>Trying to get back to your farm?</h2>
          <h4>Next tractor leaves in: <%= rand(25..59) %> seconds</h4>
          <br>
          <%= form_tag '/login' do %>
            <div class="form-group">
              <h5>Email: </h5>
              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>
            <div class="form-group">
              <h5>Password: </h5>
              <%= password_field_tag :password, nil, class: 'form-control' %>
              <br>
              <%= submit_tag "Submit", class: 'btn btn-warning btn-lg' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
