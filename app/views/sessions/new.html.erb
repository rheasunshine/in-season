<div class="registration">
  <div class="row">
    <div class="tractor">
      <div class="col m10 offset-m1 white">

      <div class="col l10 offset-l1">
        <h3>Trying to get back to your farm?</h3>
        <h5>Next tractor leaves in: <%= rand(25..45) %> seconds</h5>
        <br>
        <% if flash[:error] %>
        <span>
          <b>* <%= flash[:error] %> *</b>
        </span>
        <% end %>
      </div>

        <%= form_tag '/login' do %>

        <div class="row">
          <div class="input-field col l10 offset-l1">
            <div class="form-group placeholder:">
              <label for="email">Email</label>

              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="input-field col l10 offset-l1">
            <div class="form-group">

              <label for="password">Password</label>
              <%= password_field_tag :password, nil, class: 'form-control' %>
              <br>
              <div class="col l3 offset-l9">
                <button class="btn waves-effect waves-light green" type="submit" name="action">Submit</button>
              </div>

            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
