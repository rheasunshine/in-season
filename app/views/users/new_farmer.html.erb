<div class="registration">
  <div class="row">
    <div class="col lg 10">
      <div class="jumbotron">
        <h2>Get down and dirty with us!</h2>
        <h3>Farmer Registration</h3>
        <br>
        <%= form_for :user, url: users_path do |f| %>
        <div class="form-group">
          <h5>First Name: </h5>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <h5>Last Name: </h5>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <h5>Email: </h5>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <h5>Password: </h5>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <h5>Confirm Password: </h5>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.hidden_field :is_farmer, value: true %>
        <%= f.submit "Register your farm!", class: 'btn btn-warning btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
</div>




<div class="registration">
  <div class="row">
    <form class="col m10 offset-m1 white">
    <div class="col m5">
      <h3>Farmer Registration</h3>
      <h4>Get down and dirty with us!</h4>
    </div>
      <div class="row">
        <div class="input-field col m7">
          <input id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col m7">
          <input id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m12">
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m6">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
        <div class="input-field col m6">
          <input id="password" type="password" class="validate">
          <label for="password">Confirm Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col m3 offset-m9">
          <button class="btn waves-effect waves-light grey lighten-1" type="submit" name="action">Submit
            <i class="material-icons left">send</i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

