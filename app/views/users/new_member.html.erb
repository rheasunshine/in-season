<div class="registration">
  <div class="row">
    <div class="col l10 offset-l1 white">
      <div class="card-content black-text col l5">
        <h3>Member Registration</h3>
        <h4>Get down and dirty with us!</h4>
      </div>
      <%= form_for :user, url: users_path do |f| %>

      <div class="row">
        <div class="input-field col l7">
          <label for="first_name">First Name</label>
          <%= f.text_field :first_name, class: 'form-control, validate' %>
        </div>

        <div class="input-field col l7">
          <label for="last_name">Last Name</label>
          <%= f.text_field :last_name, class: 'form-control, validate' %>
        </div>
      </div>

      <div class="input-field col l12">
        <label for="email">Email</label>
        <%= f.text_field :email, class: 'form-control, validate' %>
      </div>

      <div class="input-field col l12">
        <label for="password">Password</label>
        <%= f.password_field :password, class: 'form-control, validate' %>
      </div>

      <div class="input-field col l12">
        <label for="password">Confirm Password</label>
        <%= f.password_field :password_confirmation, class: 'form-control, validate' %>
      </div>

      <%= f.hidden_field :is_farmer, value: false %>
      <%# f.submit "Register your farm!", class: 'btn green' %>
                <button class="btn waves-effect waves-light green col l2 offset-l5" type="submit" name="action">Submit
            <i class="material-icons left">send</i>
      <% end %>
    </div>
  </div>
</div>
